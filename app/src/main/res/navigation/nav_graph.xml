<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/debtsFragment"
        android:name="com.tadiuzzz.debts.ui.view.DebtsFragment"
        android:label="fragment_debts"
        tools:layout="@layout/fragment_debts" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.tadiuzzz.debts.ui.view.CategoriesFragment"
        android:label="Менеджер категорий"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_editCategoryFragment"
            app:destination="@+id/editCategoryFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
    </fragment>
    <fragment
        android:id="@+id/editCategoryFragment"
        android:name="com.tadiuzzz.debts.ui.view.EditCategoryFragment"
        android:label="Редактирование категории"
        tools:layout="@layout/fragment_edit_category" />
    <fragment
        android:id="@+id/personsFragment"
        android:name="com.tadiuzzz.debts.ui.view.PersonsFragment"
        android:label="Менеджер персон"
        tools:layout="@layout/fragment_persons">
        <action
            android:id="@+id/action_personsFragment_to_editPersonFragment"
            app:destination="@id/editPersonFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
    </fragment>
    <fragment
        android:id="@+id/editPersonFragment"
        android:name="com.tadiuzzz.debts.ui.view.EditPersonFragment"
        android:label="fragment_edit_person"
        tools:layout="@layout/fragment_edit_person" />
    <fragment
        android:id="@+id/editDebtFragment"
        android:name="com.tadiuzzz.debts.ui.view.EditDebtFragment"
        android:label="Редактирование долга"
        tools:layout="@layout/fragment_edit_debt">
        <action
            android:id="@+id/action_editDebtFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
        <action
            android:id="@+id/action_editDebtFragment_to_personsFragment"
            app:destination="@id/personsFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
    </fragment>
    <fragment
        android:id="@+id/backupRestoreFragment"
        android:name="com.tadiuzzz.debts.ui.view.BackupRestoreFragment"
        android:label="Резервное копирование"
        tools:layout="@layout/fragment_backup_restore_db" />
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.tadiuzzz.debts.ui.view.ViewPagerFragment"
        android:label="Долги"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_editDebtFragment"
            app:destination="@id/editDebtFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
        <action
            android:id="@+id/action_viewPagerFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
        <action
            android:id="@+id/action_viewPagerFragment_to_personsFragment"
            app:destination="@id/personsFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
        <action
            android:id="@+id/action_viewPagerFragment_to_backupRestoreFragment"
            app:destination="@id/backupRestoreFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
        <action
            android:id="@+id/action_viewPagerFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment"
            app:enterAnim="@anim/anim_enter"
            app:popEnterAnim="@anim/anim_enter" />
    </fragment>
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.tadiuzzz.debts.ui.view.AboutAppFragment"
        android:label="О приложении"
        tools:layout="@layout/fragment_about_app" />
</navigation>